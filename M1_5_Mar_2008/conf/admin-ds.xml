<!--  Datasource config for MySQL using 2.0.11 driver                     -->
<!-- ==================================================================== -->
<datasources>
  <local-tx-datasource>
      <jndi-name>adminDS</jndi-name>
      <connection-url>jdbc:mysql://localhost:3306/cab2b</connection-url>
      <driver-class>com.mysql.jdbc.Driver</driver-class>
      <user-name>root</user-name>
      <password></password>
      <use-java-context>true</use-java-context>
      <min-pool-size>2</min-pool-size>
      <max-pool-size>25</max-pool-size>
      <!--check-valid-connection-sql>select count(*) from CAB2B_ID_TABLE</check-valid-connection-sql-->
  </local-tx-datasource>
</datasources>
