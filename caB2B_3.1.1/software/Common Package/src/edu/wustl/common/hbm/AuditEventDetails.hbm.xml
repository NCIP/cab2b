<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.AuditEventDetails"
        table="CATISSUE_AUDIT_EVENT_DETAILS"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_AUDIT_EVENT_DET_SEQ</param>
            </generator>
        </id>

        <property
            name="elementName"
            type="string"
            update="true"
            insert="true"
            column="ELEMENT_NAME"
            length="150"
        />

        <property
            name="previousValue"
            type="string"
            update="true"
            insert="true"
            column="PREVIOUS_VALUE"
            length="150"
        />

        <property
            name="currentValue"
            type="string"
            update="true"
            insert="true"
            column="CURRENT_VALUE"
            length="500"
        />

        <many-to-one
            name="auditEventLog"
            class="edu.wustl.common.domain.AuditEventLog"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="AUDIT_EVENT_LOG_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEventDetails.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
