<?xml version='1.0'?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.common.dynamicextensions.domain.validationrules.Rule"
        table="DYEXTN_RULE"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DYEXTN_RULE_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
        />

        <set
            name="ruleParameterCollection"
            table="DYEXTN_RULE_PARAMETER"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

              <key
                  column="RULE_ID"
              />

              <one-to-many
                  class="edu.common.dynamicextensions.domain.validationrules.RuleParameter"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Rule.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
