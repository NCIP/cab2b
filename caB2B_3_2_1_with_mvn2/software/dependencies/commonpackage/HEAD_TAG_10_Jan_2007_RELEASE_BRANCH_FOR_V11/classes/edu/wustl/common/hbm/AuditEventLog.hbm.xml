<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.AuditEventLog"
        table="CATISSUE_AUDIT_EVENT_LOG"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_AUDIT_EVENT_LOG_SEQ</param>
            </generator>
        </id>

        <property
            name="objectIdentifier"
            type="long"
            update="true"
            insert="true"
            column="OBJECT_IDENTIFIER"
            length="50"
        />

        <property
            name="objectName"
            type="string"
            update="true"
            insert="true"
            column="OBJECT_NAME"
            length="50"
        />

        <property
            name="eventType"
            type="string"
            update="true"
            insert="true"
            column="EVENT_TYPE"
            length="50"
        />

        <many-to-one
            name="auditEvent"
            class="edu.wustl.common.domain.AuditEvent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="AUDIT_EVENT_ID"
        />

        <set
            name="auditEventDetailsCollcetion"
            table="CATISSUE_AUDIT_EVENT_DETAILS"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="AUDIT_EVENT_LOG_ID"
              />

              <one-to-many
                  class="edu.wustl.common.domain.AuditEventDetails"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEventLog.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
