<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.LoginEvent"
        table="LOGIN_EVENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="LOGIN_EVENT_ID"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">LOGIN_EVENT_PARAM_SEQ</param>
            </generator>
        </id>

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <property
            name="sourceId"
            type="long"
            update="true"
            insert="true"
            column="SOURCE_ID"
        />

        <property
            name="userLoginId"
            type="string"
            update="true"
            insert="true"
            column="USER_LOGIN_ID"
            length="20"
        />
        
         <property
            name="ipAddress"
            type="string"
            update="true"
            insert="true"
            column="IP_ADDRESS"
            length="20"
        />

        <property
            name="isLoginSuccessful"
            type="boolean"
            update="true"
            insert="true"
            column="LOGIN_SUCCESS"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
