<?xml version='1.0'?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.common.dynamicextensions.domain.FileAttributeRecordValue"
        table="DE_FILE_ATTR_RECORD_VALUES"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DE_FILE_ATTR_REC_VALUES_SEQ</param>
            </generator>
        </id>

        <property
            name="contentType"
            type="string"
            update="true"
            insert="true"
            column="CONTENT_TYPE"
        />

        <property
            name="fileContent"
            type="edu.common.dynamicextensions.util.BinaryBlobType"
            update="true"
            insert="true"
            column="FILE_CONTENT"
        />

        <property
            name="fileName"
            type="string"
            update="true"
            insert="true"
            column="FILE_NAME"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FileAttributeRecordValue.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
