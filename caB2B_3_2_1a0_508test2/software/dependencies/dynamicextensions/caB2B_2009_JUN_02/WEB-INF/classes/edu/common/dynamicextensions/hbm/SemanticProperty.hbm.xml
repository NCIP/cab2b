<?xml version='1.0'?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.common.dynamicextensions.domain.SemanticProperty"
        table="DYEXTN_SEMANTIC_PROPERTY"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DYEXTN_SEMANTIC_PROPERTY_SEQ</param>
            </generator>
        </id>

        <property
            name="conceptCode"
            type="string"
            update="true"
            insert="true"
            column="CONCEPT_CODE"
        />

        <property
            name="term"
            type="string"
            update="true"
            insert="true"
            column="TERM"
        />

        <property
            name="thesaurasName"
            type="string"
            update="true"
            insert="true"
            column="THESAURAS_NAME"
        />

        <property
            name="sequenceNumber"
            type="int"
            update="true"
            insert="true"
            column="SEQUENCE_NUMBER"
        />

        <property
            name="conceptDefinition"
            type="string"
            update="true"
            insert="true"
            column="CONCEPT_DEFINITION"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SemanticProperty.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
