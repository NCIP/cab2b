<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory>
		<property name="show_sql">true</property>

		<!-- use data source -->
		<property name="connection.datasource">java:/DS-NAME</property>

		<!-- use Local Database    
			<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
			<property name="hibernate.connection.username">root</property>
			<property name="hibernate.connection.password">root</property>
			<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cab2b</property>
		-->

		<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.jdbc.batch_size">0</property>
		
		<mapping resource="edu/wustl/common/hbm/Path.hbm.xml" />
		<mapping resource="edu/wustl/common/hbm/CuratedPath.hbm.xml" />
		<mapping resource="edu/wustl/common/hbm/AbstractCategorialAttribute.hbm.xml" />
		<mapping resource="edu/wustl/common/hbm/AbstractCategorialClass.hbm.xml" />
		<mapping resource="edu/wustl/common/hbm/AbstractCategory.hbm.xml" />
		<mapping resource="edu/wustl/cab2b/server/hbm/ServiceURL.hbm.xml" />
		<mapping resource="edu/wustl/cab2b/server/hbm/User.hbm.xml" />
	</session-factory>
</hibernate-configuration>