<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.cab2b.common.domain.ArrayDesign"
        table="arraydesign"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="ARD_ID"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">ARRAY_DESIGN_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="ARD_NAME"
            length="50"
        />

        <set
            name="microarrayChipCollection"
            table="ArrayDesign"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="ARD_ID"
              />

              <one-to-many
                  class="edu.wustl.cab2b.common.domain.MicroarrayChip"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ArrayDesign.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
