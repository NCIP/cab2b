<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.cab2b.common.domain.AbstractDomainObject"
        table="CAB2B_ABSTRACT_DOMAIN_OBJECT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="ADO_ID"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">ADO_SEQ</param>
            </generator>
        </id>

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ADO_ACTIVITY_STATUS"
            length="50"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AbstractDomainObject.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.cab2b.common.domain.AdditionalMetadata"
            table="CAB2B_ADDITIONAL_META_DATA"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="AMD_ID"
        />
        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="50"
        />

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="DESCRIPTION"
            length="255"
        />

		<property
            name="userId"
            type="string"
            update="true"
            insert="true"
            column="USER_ID"
            
        />
        <property
            name="createdOn"
            type="date"
            update="true"
            insert="true"
            column="CREATED_ON"
        />

        <property
            name="lastUpdatedOn"
            type="date"
            update="true"
            insert="true"
            column="LAST_UPDATED_ON"
        />

        <joined-subclass
            name="edu.wustl.cab2b.common.domain.ExperimentGroup"
            table="CAB2B_EXPERIMENT_GROUP"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="EXG_ID"
        />

        <many-to-one
            name="parentGroup"
            class="edu.wustl.cab2b.common.domain.ExperimentGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PARENT_EXG_ID"
        />

        <set
            name="experimentCollection"
            table="CAB2B_EXP_GRP_MAPPING"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="EXG_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.Experiment"
                  column="EXP_ID"
                  outer-join="auto"
              />

        </set>

        <set
            name="childrenGroupCollection"
            table="CAB2B_EXPERIMENT_GROUP"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="PARENT_EXG_ID"
              />

              <one-to-many
                  class="edu.wustl.cab2b.common.domain.ExperimentGroup"
              />
        </set>

        </joined-subclass>
        <joined-subclass
            name="edu.wustl.cab2b.common.domain.DataListMetadata"
            table="CAB2B_DATA_LIST"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="DL_ID"
        />

        <set
            name="entityIds"
            table="CAB2B_DATALIST_ENTITY"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="DATALIST_METADATA_ID"
              />

              <element
                  column="ENTITY_ID"
                  type="long"
                  not-null="true"
                  unique="false"
              />

        </set>

        <property
            name="customDataCategory"
            type="boolean"
            update="true"
            insert="true"
            column="CUSTOM_DATA_CATEGORY"
        />

        <property
            name="rootEntityId"
            type="long"
            update="true"
            insert="true"
            column="ROOT_ENTITY_ID"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.wustl.cab2b.common.domain.Experiment"
            table="CAB2B_EXPERIMENT"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="EXP_ID"
        />

 		
        <set
            name="experimentGroupCollection"
            table="CAB2B_EXP_GRP_MAPPING"
            lazy="false"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="EXP_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.ExperimentGroup"
                  column="EXG_ID"
                  outer-join="auto"
              />

        </set>

        <set
            name="dataListMetadataCollection"
            table="CAB2B_EXP_DLMETADATA_MAPPING"
            lazy="false"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="EXP_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.DataListMetadata"
                  column="DL_ID"
                  outer-join="auto"
              />

        </set>

        </joined-subclass>

        </joined-subclass>

    </class>

</hibernate-mapping>
