<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.cab2b.common.domain.AbstractDomainObject"
        table="abstractdomainobject"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="ADO_ID"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">ADO_SEQ</param>
            </generator>
        </id>

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ADO_ACTIVITY_STATUS"
            length="50"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AbstractDomainObject.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.cab2b.common.domain.AdditionalMetadata"
            table="additionalmetadata"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="AMD_ID"
        />
        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="AMD_NAME"
            length="50"
        />

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="AMD_DESCRIPTION"
            length="50"
        />

        <property
            name="createdOn"
            type="date"
            update="true"
            insert="true"
            column="AMD_CREATED_ON"
        />

        <property
            name="lastUpdatedOn"
            type="date"
            update="true"
            insert="true"
            column="AMD_LAST_UPDATED_ON"
        />

        <joined-subclass
            name="edu.wustl.cab2b.common.domain.ExperimentGroup"
            table="experimentgroup"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="EXG_ID"
        />

        <many-to-one
            name="parentGroup"
            class="edu.wustl.cab2b.common.domain.ExperimentGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PARENT_EXG_ID"
        />

        <set
            name="experimentCollection"
            table="expgrpmapping"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="EXG_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.Experiment"
                  column="EXP_ID"
                  outer-join="auto"
              />

        </set>

        <set
            name="childrenGroupCollection"
            table="experimentgroup"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="PARENT_EXG_ID"
              />

              <one-to-many
                  class="edu.wustl.cab2b.common.domain.ExperimentGroup"
              />
        </set>

        </joined-subclass>
        
        
        <joined-subclass
            name="edu.wustl.cab2b.common.domain.DataListMetadata"
            table="datalist"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="DL_ID"
        />
        </joined-subclass>
        
        <joined-subclass
            name="edu.wustl.cab2b.common.domain.Experiment"
            table="experiment"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="EXP_ID"
        />

        <set
            name="experimentGroupCollection"
            table="expgrpmapping"
            lazy="false"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="EXP_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.ExperimentGroup"
                  column="EXG_ID"
                  outer-join="auto"
              />

        </set>

        <joined-subclass
            name="edu.wustl.cab2b.common.domain.MicroarrayExperiment"
            table="microarrayexperiment"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="MEX_ID"
        />

        <set
            name="microarrayChipCollection"
            table="microexpchipmap"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="MEX_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.MicroarrayChip"
                  column="MIC_ID"
                  outer-join="auto"
              />

        </set>

        </joined-subclass>

        </joined-subclass>

        </joined-subclass>

    </class>

</hibernate-mapping>
