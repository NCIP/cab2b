<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.cab2b.common.domain.MicroarrayChip"
        table="microarraychip"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="MIC_ID"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">MICROARRAY_CHIP_SEQ</param>
            </generator>
        </id>

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="MIC_DESCRIPTION"
            length="200"
        />

        <property
            name="label"
            type="string"
            update="true"
            insert="true"
            column="MIC_LABEL"
            length="50"
        />

        <many-to-one
            name="arrayDesign"
            class="edu.wustl.cab2b.common.domain.ArrayDesign"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ARD_ID"
        />

        <set
            name="microarrayExperimentCollection"
            table="microexpchipmap"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="MIC_ID"
              />

              <many-to-many
                  class="edu.wustl.cab2b.common.domain.MicroarrayExperiment"
                  column="MEX_ID"
                  outer-join="auto"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MicroarrayChip.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
